{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./frontend/src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["frontend/src"]
}
